[core]
	editor = code --wait
[alias]
	ad = add
	st = status
	br = branch
	brm = branch -m
	brd = branch -d
	brdd = branch -D
	co = checkout
	sw = switch
	swc = switch -c
	r = reset
	rs = restore
	rb = rebase
	ci = commit
	cim = commit -m
	ps = "!git push origin $(git rev-parse --abbrev-ref HEAD)" # 現在選択されているローカルのブランチと同名のリモートブランチにpush
	pl = "!git pull origin $(git rev-parse --abbrev-ref HEAD)" # 現在のブランチと同名のリモートブランチからpull
	f = fetch
	mg = merge --no-ff
	mgff = merge --ff
	ss = stash
	ssl = stash list
	ssa = stash apply
	ssd = stash drop
	ssc = stash clear
	lg1 = log -1
	lg2 = log -2
	lg3 = log -3
	lgone = log --oneline
	lgg = log --graph --pretty=format:'%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	firstcom = commit --allow-empty -m \"Initial commit\"
[merge]
	ff = false
[pull]
	rebase = true
